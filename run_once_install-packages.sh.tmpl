{{ if eq .chezmoi.os "darwin" -}}
#!/usr/bin/env zsh

# THIS SCRIPT IS RUN ONCE BY CHEZMOI TO SET UP.

# Antigen (Package manager for `zsh`) 
brew install antigen
{{ else if eq .chezmoi.os "linux" -}}
#!/usr/bin/env zsh

# All tools are installed to `tool_path` which should be specified in `chezmoi.toml`.

# Antigen
curl -L git.io/antigen > {{ .tool_path }}/antigen.zsh

# Install nvim
wget -P {{ .tool_path }} https://github.com/neovim/neovim/releases/download/nightly/nvim-linux64.tar.gz
tar zxvf {{ .tool_path }}nvim-linux64.tar.gz


{{ end -}}


# Install Vundle (package manager for `Vim`).
if [ -e ~/.vim/bundle/Vundle.vim ]
then
	echo "Vundle already installed."
else
	echo "Vundle not found, installing."
	git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim
fi

